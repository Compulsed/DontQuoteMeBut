<div id="login-container">
	<div class="container">
		<div class="login-box well">
			<div class="row">
				<div class="form-title text-center">
					<h1 class="col-xs-12">"Login"</h1>
				</div>

				<form {{action 'authenticate' on='submit'}} id="login-form">
					<div class="form-group">
						<!-- <input class="form-control" type="text" name="username" placeholder="Username">-->
						{{input id='identification' placeholder='Username' value=identification class="form-control"}}
					</div>
					<div class="form-group">
						<!-- <input class="form-control" type="password" name="password" placeholder="Password"> -->
						{{input id='password' placeholder='Password' type='password' value=password class="form-control" }}
					</div>
					<div>
						<p>User: letme - Pass: in</p>
					</div>
					<input class="login-button btn btn-danger" type="submit" value="Login">
					<input class="register-button btn btn-danger" type="button" value="Register">
				</form>

			</div>
		</div>
		<div class="footer text-center">
			<a href="#">Send us Feedback</a>
		</div>
	</div>
</div>